extends layout.pug

block title
	title DiscordOverlay::Overlay Link

block content
	- let url = `${hostname}/overlay/${memberid}`;
	.col-md-6
		h3.text-success Thanks for registering with DiscordOverlay!
		p Your overlay link &mdash; #[span.highlight-dark http://#{url}] #[br] Your registered username &mdash; #[span.highlight-dark #{username}]
		following
		.row
			.col-md-6
				a(href=`//${url}` target='_blank')
					button.btn.btn-lg.btn-block.btn-success Let me see!