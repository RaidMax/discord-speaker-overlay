extends layout.pug

block meta
	- let desc = 'Get started with DiscordOverlay by authorizing our bot, finding your User ID, and registering!'
	meta(property='og:title' content='DiscordOverlay::Register')
	meta(property='og:type' content='website')
	meta(property='og:image' content='/resources/image/overlay_speaker_green_small.png')
	meta(property='og:description' content=desc)
	meta(property='og:url' content=hostname + currentPage)

block scriptIncludes
	script(src='/resources/script/register.js')
	
block modal
	.modal.fade#register-modal(tabindex='-1' role='dialog' aria-labelledby='register-modal-label' aria-hidden='true')
		.modal-dialog(role='document')
			.modal-content
				.modal-header
					button(type='button' class='close' data-dismiss='modal' aria-label='Close')
						span(aria-hidden='true') &times; 
				.modal-body
					.alert.mb-0
				.modal-footer
					button.btn.btn-default#registrationModalButton(data-dismiss='modal') Retry

block title
	title DiscordOverlay::Get Started

block content
	.col-md-12
		h3.text-success Let's get you started with DiscordOverlay!
		p First thing's first, we need to add our bot to your #[a(href='https://discordapp.com' target='_blank') Discord Guild].
			.row
				.col-md-4
					a(href='https://discordapp.com/oauth2/authorize?&client_id=234879671580360734&scope=bot' target='_blank')
						button.btn.btn-lg.btn-block.btn-success Authorize Now!
		p Next you need to find your #[a(href='https://support.discordapp.com/hc/en-us/articles/206346498-Where-can-I-find-my-User-Server-Message-ID-' target='_blank') User ID]. #[br] Finally, register to get your overlay link!
		p.text-muted Remember, you must have the #[strong Manage Server] permission to invite DiscordOverlay.
		hr
	.col-md-6
		h4.font-alternative.mb-3 #[span.text-success 1 &mdash;] Authorize DiscordOverlay
		img.img-fluid.full-width.mb-3(src='/resources/image/register_1.png')
	.col-md-6
		h4.font-alternative.mb-3 #[span.text-success 2 &mdash;] Find your User ID
		.embed-responsive.embed-responsive-4by3.mb-3
			video.embed-responsive-item(autoplay loop)
				source(src='/resources/video/register_2.mp4' type='video/mp4')
		
	.col-md-12
		//hr
	.col-md-12
		#register-instructions
			h4.font-alternative.mb-3 #[span.text-success 3 &mdash;] Register
		.row
			.col-md-4
				form#register-form
					input.form-control.mb-3#register-user-id(placeholder='Enter User ID')
					input.form-control.mb-3#register-email(placeholder='Enter Email Address')
					button.btn.btn-lg.btn-block.btn-success#register-button(data-toggle='modal' data-target='#register-modal') Register
			