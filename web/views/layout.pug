		block scriptIncludes
	body
		nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
			.container
				a.navbar-brand(href='../') DiscordOverlay
				button.navbar-toggler(type='button', data-toggle='collapse' data-target='#navbarResponsive' aria-controls='navbarResponsive' aria-expanded='false' aria-label='Toggle navigation')
					span.navbar-toggler-icon
				.collapse.navbar-collapse#navbarResponsive
					ul.navbar-nav.mr-auto
						each page in pages
							if page.title == currentPage
								li.nav-item.active
									a.nav-link(href=page.href) #{page.name}
							else
								li.nav-item
									a.nav-link(href=page.href) #{page.name}
		.container#content
			block modal
			.row
				block content
				.col-md-12
					hr